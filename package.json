{
  "name": "udon-frontend",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev:local": "cp -f .env.development .env.local && next dev --turbo",
    "dev:prod": "cp -f .env.production .env.local && next dev --turbo",
    "build:prod": "cp -f .env.production .env.local && next build",
    "start:prod": "cp -f .env.production .env.local && next start",
    "sitemap": "next-sitemap"
  },
  "dependencies": {
    "@chromia/ft4": "^1.1.0",
    "@chromia/react": "^0.3.0",
    "@chromia/ui-kit": "^0.7.0",
    "@radix-ui/react-dialog": "^1.1.6",
    "@tanstack/react-query": "^5.72.0",
    "connectkit": "^1.8.2",
    "filehub": "^1.0.4",
    "lucide-react": "^0.487.0",
    "next": "15.2.2",
    "next-themes": "^0.4.6",
    "postchain-client": "^1.20.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.2.0",
    "wagmi": "^2.14.13",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
